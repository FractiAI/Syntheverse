    "minimum_coverage": 90,
    "include_patterns": ["src/**/*.py"],
    "exclude_patterns": ["*/tests/*", "*/__pycache__/*", "*/migrations/*"],
    "generate_html_report": true,
    "generate_xml_report": true,
    "fail_under_threshold": true,
    "show_missing_lines": true,
    "branch_coverage": false
